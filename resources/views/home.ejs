<!-- menu -->
<section>

 
  
  <div class="container-fluid">
    <h2 class="center">Menu</h2>
    <!-- center bi ni....auto bhi nhi...justufy content center bhi nhi -->
    <!-- dynamic banenge menu card -->
    
    <div class="row ">
      <% dishes.forEach(function(dish){ %>
        <div class="card col-sm-4 col-lg-3 ">
          <img class="card-img-top" src="/img/<%= dish.image %>" alt="">
          <div class="card-body">
            <h5 class="card-title text-center"><%= dish.name %></h5>
            <p class="card-text text-center"><%= dish.size %></p>
            <button data-dish="<%=JSON.stringify(dish)%>"  class="btn btn-primary add-to-cart rounded-pill function-add">Add to cart</button>
            <span class="card-text mr-3">â‚¹ <%= dish.price %></span>
          </div>
        </div>
     <% }) %>
      

    </div>

  </div>
</section>